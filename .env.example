PGHOST=localhost
PGPORT=5432
PGUSER=dev
PGPASSWORD=dev
PGDATABASE=civicue

# Socrata app tokens (set one or many)
# Global default for any Socrata domain
SOCRATA_APP_ID=
# Optional per-domain overrides (example)
SFDATA_APP_ID=
DETROITDATA_APP_ID=
# Optional OAuth client credentials for private endpoints (per-domain)
SFDATA_OAUTH_CLIENT_ID=
SFDATA_OAUTH_CLIENT_SECRET=

# ===== CKAN =====
# e.g., https://data.detroitmi.gov (if CKAN) or any CKAN portal
CKAN_BASE_URL=
# Only needed for private/org writes/reads; header: X-CKAN-API-Key
CKAN_API_KEY=
# Optional scoping (helpful for your builder scripts)
CKAN_ORG=
CKAN_VERIFY_SSL=true

# Example per-city CKAN token (if needed)
SAN_DIEGO_CKAN_TOKEN=

# ===== ArcGIS (ArcGIS Online / Enterprise / Hub) =====
# Portal base (ArcGIS Online) or your Enterprise portal:
ARCGIS_PORTAL_URL=https://www.arcgis.com
# Option A: OAuth2 (server-side) — for org/private content
ARCGIS_CLIENT_ID=
ARCGIS_CLIENT_SECRET=
# Option B: API key (ArcGIS Developer) — mostly for location services; some hubs allow it
ARCGIS_API_KEY=
# Option C: Username/password (Enterprise “generateToken” flow; use only if required)
ARCGIS_USERNAME=
ARCGIS_PASSWORD=
# Token endpoints (override if using Enterprise):
ARCGIS_OAUTH_TOKEN_URL=https://www.arcgis.com/sharing/rest/oauth2/token
ARCGIS_GENERATE_TOKEN_URL=${ARCGIS_PORTAL_URL}/sharing/rest/generateToken
# Useful for ArcGIS Hub discovery
ARCGIS_HUB_SITE=
# Fallback token for simple cases
ARCGIS_TOKEN=

# Global fetch timeout for catalog builders
HTTP_FETCH_TIMEOUT_MS=20000
